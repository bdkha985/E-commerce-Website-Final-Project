# --------- App ---------
NODE_ENV=development
PORT=8081
HOST_NAME=localhost

# --------- Database ---------
# Example: mongodb://127.0.0.1:27017/web_nodejs
MONGODB_URI=

# --------- Sessions / Security ---------
# Generate a long random string (32+ chars)
SESSION_SECRET=

# --------- Redis (optional; used for sessions/queues) ---------
# Example: redis://localhost:6379
REDIS_URL=

# --------- OAuth (Google / Facebook) ---------
# Obtain from Google Cloud Console / Facebook Developers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

FB_APP_ID=
FB_APP_SECRET=
FB_CALLBACK_URL=http://localhost/auth/facebook/callback

# --------- SMTP (Nodemailer) ---------
# For Gmail, you may need an App Password.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=
SMTP_PASS=

# --------- Password Recovery ---------
OTP_LENGTH=6
OTP_EXPIRES_MIN=10
RESET_TOKEN_EXPIRES_MIN=5

# --------- VNPAY Sandbox ---------
# Get TMN code and hash secret from VNPAY portal
VNP_TMNCODE=
VNP_HASHSECRET=
VNP_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNP_RETURN_URL=http://localhost/checkout/vnpay_return
