<section class="container" style="padding: 40px 0 60px;">
  <div class="text-center mb-5">
    <h1 class="section-title" style="margin-top: 0;">Khám Phá Danh Mục</h1>
    <p class="text-muted" style="font-size: 1.6rem;">Chọn danh mục bạn quan tâm để bắt đầu mua sắm</p>
  </div>

  <div class="grid" style="grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 30px;">
    <% categories.forEach(cat => { %>
    <article class="card" style="border: none; border-radius: 20px; overflow: hidden; box-shadow: 0 10px 30px rgba(0,0,0,0.08);">
      <a href="/c/<%= cat.slug %>" class="d-block position-relative group">
        <img src="<%= cat.image %>" alt="<%= cat.name %>" style="width: 100%; height: 350px; object-fit: cover; transition: transform 0.5s ease;">

        <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-end p-4" style="background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);">
          <div class="text-white w-100">
            <h3 class="fw-bold mb-2" style="font-size: 2.4rem; color: white;"><%= cat.name %></h3>
            <span class="btn btn-light rounded-pill px-4 fw-bold" style="font-size: 1.4rem;">
              Xem ngay <i class="fa-solid fa-arrow-right ms-2"></i>
            </span>
          </div>
        </div>
      </a>
    </article>
    <% }) %>
  </div>
</section>

<style>
  .card:hover img {
    transform: scale(1.1);
  }
</style>