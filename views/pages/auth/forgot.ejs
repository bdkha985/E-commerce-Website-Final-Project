<!-- views/pages/auth/forgot.ejs -->
<section class="auth container" style="max-width: 520px">
    <div class="auth-card">
        <h1 class="auth-title">Quên mật khẩu</h1>
        <p class="auth-sub">Nhập email để nhận mã OTP</p>
        <div id="forgotAlert" class="alert d-none"></div>
        <form id="forgotForm" class="auth-form" novalidate>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input
                    name="email"
                    type="email"
                    class="form-control"
                    required />
            </div>
            <button id="btnForgot" type="button" class="btn btn-primary w-100">
                Gửi OTP
            </button>
        </form>
    </div>
</section>

<script src="/javascripts/auth/forgot.js" defer></script>
