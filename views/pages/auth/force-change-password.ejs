<section class="auth container" style="max-width: 520px">
    <div class="auth-card">
        <h1 class="auth-title">Đổi Mật Khẩu Lần Đầu</h1>
        <p class="auth-sub">Vui lòng đặt mật khẩu mới cho tài khoản của bạn.</p>
        <div id="fcAlert" class="alert d-none"></div>
        <form id="fcForm" class="auth-form">
            <div class="form-floating mb-3">
                <input name="newPassword" type="password" class="form-control" placeholder=" " required minlength="6" />
                <label>Mật khẩu mới</label>
            </div>
            <div class="form-floating mb-3">
                <input name="confirmPassword" type="password" class="form-control" placeholder=" " required minlength="6" />
                <label>Xác nhận mật khẩu mới</label>
            </div>
            <button id="btnForceChange" type="button" class="btn btn-primary w-100">
                Lưu Mật Khẩu
            </button>
        </form>
    </div>
</section>

<script src="/javascripts/auth/force-change-password.js" defer></script>