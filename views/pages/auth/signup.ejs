<section class="auth container" style="max-width: 520px">
    <div class="auth-card">
        <div class="auth-card__brand">
            <img src="/images/K.svg" alt="K Shopping" />
            <h2>K Shopping</h2>
        </div>
        <div class="container text-center">
            <h1 class="auth-title">Sign Up</h1>
            <p class="auth-sub">Tạo tài khoản K Shopping</p>
        </div>

        <div id="signupError" class="alert alert-danger d-none"></div>

        <form id="signupForm" class="auth-form" novalidate>
            <div class="form-floating mb-3">
                <input
                    name="fullName"
                    type="text"
                    class="form-control"
                    placeholder=" "
                    required
                    minlength="2" />
                <label>Họ tên</label>
            </div>
            <div class="form-floating mb-3">
                <input
                    name="email"
                    type="email"
                    class="form-control"
                    placeholder=" "
                    required />
                <label>Email</label>
            </div>

            <p class="mb-2 fw-bold">Địa chỉ giao hàng:</p>

            <div class="form-floating mb-3">
                <input name="street" type="text" class="form-control" placeholder=" " required />
                <label>Số nhà, Tên đường</label>
            </div>
             <div class="row g-2 mb-3">
                 <div class="col-md">
                     <div class="form-floating">
                         <input name="ward" type="text" class="form-control" placeholder=" " required />
                         <label>Phường / Xã</label>
                     </div>
                 </div>
                 <div class="col-md">
                     <div class="form-floating">
                         <input name="city" type="text" class="form-control" placeholder=" " required />
                         <label>Tỉnh / Thành phố</label>
                     </div>
                 </div>
             </div>

            <button id="btnSignUp" type="button" class="btn btn-primary w-100">
                Sign Up
            </button>
        </form>

        <p class="auth-alt mt-3">
            Đã có tài khoản? <a href="/signin">Sign in</a>
        </p>
    </div>
</section>

<div class="modal fade" id="signupSuccessModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content text-center p-4 border-0 shadow-lg" style="border-radius: 24px;">
            <div class="modal-body">
                <div class="mb-4 text-success">
                    <i class="fa-solid fa-circle-check" style="font-size: 5rem;"></i>
                </div>
                <h3 class="fw-bold mb-2" style="color: #0f172a;">Đăng ký thành công!</h3>
                <p class="text-muted mb-4" style="font-size: 1.5rem;">
                    Tài khoản của bạn đã được tạo.<br>
                    Vui lòng kiểm tra <strong>Email</strong> để nhận mật khẩu tạm thời.
                </p>
                <button type="button" id="btnGoHome" class="btn btn-primary w-100 rounded-pill py-3 fw-bold" style="font-size: 1.6rem;">
                    Về Trang Chủ Ngay
                </button>
            </div>
        </div>
    </div>
</div>

<!-- chỉ trang này mới load -->
<script src="/javascripts/auth/signup.js" defer></script>
