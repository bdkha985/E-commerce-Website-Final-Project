<section class="auth container" style="max-width:480px;">
  <div class="auth-card">
    <h1 class="auth-title">Sign In</h1>
    <p class="auth-sub">Chào mừng quay lại K Shopping</p>

    <div id="signinError" class="alert alert-danger d-none"></div>

    <form id="signinForm" class="auth-form">
      <div class="mb-3">
        <label class="form-label">Email</label>
        <input name="email" type="email" class="form-control" placeholder="you@example.com" required>
      </div>

      <div class="mb-2">
        <label class="form-label">Password</label>
        <input name="password" type="password" class="form-control" placeholder="••••••••" required minlength="6">
      </div>

      <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="remember" name="remember">
          <label class="form-check-label" for="remember">Remember me</label>
        </div>
        <a class="small" href="/forgot">Forgot password?</a>
      </div>

      <button id="btnSignIn" type="button" class="btn btn-primary w-100">Sign In</button>
    </form>

    <p class="auth-alt mt-3">Chưa có tài khoản? <a href="/signup">Sign up</a></p>
            <div class="social-login">
  <a href="/auth/google" class="btn btn-danger w-100 mb-2">
    <i class="fab fa-google"></i> Đăng nhập với Google
  </a>
  <a href="/auth/facebook" class="btn btn-primary w-100">
    <i class="fab fa-facebook"></i> Đăng nhập với Facebook
  </a>
</div>
  </div>
</section>

<!-- Nhúng JS riêng cho trang signin -->
<script src="/javascripts/auth/signin.js"></script>
