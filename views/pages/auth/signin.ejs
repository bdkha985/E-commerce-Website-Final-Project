<section class="auth container auth--signin">
    <div class="auth-card shadow-lg">
        <div class="auth-card__brand">
            <img src="/images/K.svg" alt="K Shopping" />
            <h2>K Shopping</h2>
        </div>

        <div class="container text-center">
            <h1 class="auth-title">Chào mừng trở lại</h1>
            <p class="auth-sub">Đăng nhập để tiếp tục mua sắm</p>
        </div>

        <div id="signinError" class="alert alert-danger d-none"></div>

        <form id="signinForm" class="auth-form" novalidate>
            <div class="form-floating mb-3">
                <input
                    name="email"
                    type="email"
                    class="form-control"
                    id="floatingEmail"
                    placeholder="you@example.com"
                    required
                />
                <label for="floatingEmail">Email</label>
            </div>

            <div class="form-floating mb-2">
                <input
                    name="password"
                    type="password"
                    class="form-control"
                    id="floatingPassword"
                    placeholder="••••••••"
                    minlength="6"
                    required
                />
                <label for="floatingPassword">Password</label>
            </div>

            <div
                class="d-flex justify-content-between align-items-center mb-3 auth-helpers"
            >
                <div class="form-check">
                    <input
                        class="form-check-input"
                        type="checkbox"
                        id="remember"
                        name="remember"
                    />
                    <label class="form-check-label" for="remember"
                        >Remember me</label
                    >
                </div>
                <a class="auth-link" href="/forgot">Forgot password?</a>
            </div>

            <button
                id="btnSignIn"
                type="button"
                class="btn btn-primary w-100 auth-btn"
            >
                Sign In
            </button>
        </form>

        <div class="auth-divider">
            <span>hoặc</span>
        </div>

        <div class="social-login">
            <a href="/auth/google" class="btn btn-google w-100 mb-2">
                <i class="fab fa-google me-2"></i> Đăng nhập với Google
            </a>
            <a href="/auth/facebook" class="btn btn-facebook w-100">
                <i class="fab fa-facebook me-2"></i> Đăng nhập với Facebook
            </a>
        </div>

        <p class="auth-alt mt-4">
            Chưa có tài khoản?
            <a class="auth-link" href="/signup">Tạo tài khoản</a>
        </p>
    </div>

    <!-- Background decoration -->
    <div class="auth-bg auth-bg--1"></div>
    <div class="auth-bg auth-bg--2"></div>
</section>

<script src="/javascripts/auth/signin.js"></script>
