<section class="products-page container">
  <h1 class="section-title">Find Your Products</h1>

  <!-- Bộ lọc và sort -->
  <div class="products-toolbar">
    <button class="btn btn-outline-dark">All Filters</button>

    <div class="sort-box">
      <label for="sort">Sort By:</label>
      <select id="sort">
        <option value="relevancy">Relevancy</option>
        <option value="price-low">Price: Low → High</option>
        <option value="price-high">Price: High → Low</option>
      </select>
    </div>
  </div>

  <!-- Grid sản phẩm -->
  <div class="grid products-grid">
    <% (products || []).forEach(p => { %>
      <article class="card product-card">
        <a class="product-thumb" href="/products/<%= p.slug %>">
          <img src="<%= (p.images && p.images[0]) || 'https://picsum.photos/seed/na/400/400' %>" alt="<%= p.name %>">
          <div class="product-overlay">
            <button class="btn add-to-cart" type="button">Add to Cart</button>
            <button class="btn-fav" type="button"><i class="fa-regular fa-heart"></i></button>
          </div>
        </a>
        <div class="product-info">
          <p class="category"><%= p.category %></p>
          <h3><a href="/products/<%= p.slug %>"><%= p.name %></a></h3>
          <p class="price"><%= (p.price).toLocaleString('vi-VN') %>đ</p>
        </div>
      </article>
    <% }) %>
  </div>
</section>
