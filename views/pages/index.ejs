    <!-- 1. Banner -->
    <section class="banner">
        <div
            id="carouselExampleAutoplaying"
            class="carousel slide"
            data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img
                        src="./images/banner1.avif"
                        class="d-block w-100"
                        alt="Banner 1" />
                    <div
                        class="carousel-caption d-flex flex-column justify-content-center h-100">
                        <h1 class="banner-title">New Season, New Style</h1>
                        <p class="banner-subtitle">
                            Khám phá bộ sưu tập Thu – Đông 2025
                        </p>
                        <a href="#products" class="btn btn-banner">Mua ngay</a>
                    </div>
                </div>
                <div class="carousel-item">
                    <img
                        src="./images/banner2.avif"
                        class="d-block w-100"
                        alt="Banner 2" />
                    <div
                        class="carousel-caption d-flex flex-column justify-content-center h-100">
                        <h1 class="banner-title">Best Sellers</h1>
                        <p class="banner-subtitle">
                            Những sản phẩm được yêu thích nhất
                        </p>
                        <a href="#products" class="btn btn-banner">Xem ngay</a>
                    </div>
                </div>
                <div class="carousel-item">
                    <img
                        src="./images/banner3.avif"
                        class="d-block w-100"
                        alt="Banner 3" />
                    <div
                        class="carousel-caption d-flex flex-column justify-content-center h-100">
                        <h1 class="banner-title">K Shopping</h1>
                        <p class="banner-subtitle">
                            Thời trang phong cách • Giá hợp lý
                        </p>
                        <a href="#aboutus" class="btn btn-banner"
                            >Về chúng tôi</a
                        >
                    </div>
                </div>
            </div>

            <button
                class="carousel-control-prev"
                type="button"
                data-bs-target="#carouselExampleAutoplaying"
                data-bs-slide="prev">
                <span
                    class="carousel-control-prev-icon"
                    aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button
                class="carousel-control-next"
                type="button"
                data-bs-target="#carouselExampleAutoplaying"
                data-bs-slide="next">
                <span
                    class="carousel-control-next-icon"
                    aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </section>
    <!-- 2. Products -->
    <section id="products" class="products container">
        <h2 class="section-title">Best Seller</h2>
        <div class="grid">
            <% (bestSellers || []).forEach(p => { %>
            <article class="card">
                <a href="/products/<%= p.slug %>">
                    <img src="<%= p._thumb %>" alt="<%= p.name %>" />
                </a>
                <h3 class="line-clamp">
                    <a href="/products/<%= p.slug %>"><%= p.name %></a>
                </h3>
                <p class="price">
                    <%= (p._price || 0).toLocaleString('vi-VN') %>đ
                </p>
            </article>
            <% }) %>
        </div>

        <h2 class="section-title" style="margin-top: 32px">New Collection</h2>
        <div class="grid">
            <% (newCollection || []).forEach(p => { %>
            <article class="card" data-badge="New">
                <a href="/products/<%= p.slug %>">
                    <img src="<%= p._thumb %>" alt="<%= p.name %>" />
                </a>
                <h3 class="line-clamp">
                    <a href="/products/<%= p.slug %>"><%= p.name %></a>
                </h3>
                <p class="price">
                    <%= (p._price || 0).toLocaleString('vi-VN') %>đ
                </p>
            </article>
            <% }) %>
        </div>
    </section>

